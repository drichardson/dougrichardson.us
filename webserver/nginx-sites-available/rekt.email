#
# Redirect to dougrichardson.org
#
server {
    listen 80;
    listen [::]:80;
    server_name rekt.email;
    return 301 https://dougrichardson.us;
}

server {
    # for debugging only
    # error_log	/var/log/nginx/dougrichardson.us.error.log debug;

    #
    # SSL configuration
    #
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name rekt.email;

    add_header Strict-Transport-Security "max-age=31536000;";
    add_header Content-Security-Policy "default-src 'self'; block-all-mixed-content;";
    expires 5m;

    return 301 https://dougrichardson.us;

    ssl_certificate /etc/letsencrypt/live/rekt.email/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/rekt.email/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/rekt.email/chain.pem;
}

